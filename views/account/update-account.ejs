<div class="form-container">
  <!-- Flash Message -->
  <% if (messages) { %>
    <div class="flash-message"><%= messages %></div>
  <% } %>

  <!-- Update Account Form -->
  <form action="/account/update" method="POST" id="updateAccountForm">
    <h2>Update Account</h2>
    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

    <label for="account_firstname">First Name</label>
    <input
      type="text"
      name="account_firstname"
      id="account_firstname"
      value="<%= accountData.account_firstname %>"
      required>
    <% if (errors && errors.account_firstname) { %>
      <span class="error-message"><%= errors.account_firstname %></span>
    <% } %>

    <label for="account_lastname">Last Name</label>
    <input
      type="text"
      name="account_lastname"
      id="account_lastname"
      value="<%= accountData.account_lastname %>"
      required>
    <% if (errors && errors.account_lastname) { %>
      <span class="error-message"><%= errors.account_lastname %></span>
    <% } %>

    <label for="account_email">Email</label>
    <input
      type="email"
      name="account_email"
      id="account_email"
      value="<%= accountData.account_email %>"
      required>
    <% if (errors && errors.account_email) { %>
      <span class="error-message"><%= errors.account_email %></span>
    <% } %>

    <button type="submit">Update Account</button>
  </form>

  <!-- Change Password Form -->
  <form action="/account/update-password" method="POST" id="changePasswordForm">
    <h2>Change Password</h2>
    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

    <label for="account_password">New Password</label>
    <input
      type="password"
      name="account_password"
      id="account_password"
      required>
    <p class="form-instructions">
      Passwords must be at least 8 characters and contain a mix of letters, numbers, and symbols.
    </p>
    <% if (errors && errors.account_password) { %>
      <span class="error-message"><%= errors.account_password %></span>
    <% } %>

    <button type="submit">Change Password</button>
  </form>
</div>